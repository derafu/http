{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <h1 class="mb-4 border-bottom">
        {% block title %}Derafu HTTP: Twig Template{% endblock %}
    </h1>
    <div class="d-grid gap-2 d-md-flex mb-4">
        <a href="?repeat=10" class="btn btn-primary flex-fill btn-lg">Repeat 10</a>
        <a href="?repeat=100" class="btn btn-primary flex-fill btn-lg">Repeat 100</a>
        <a href="?repeat=1000" class="btn btn-primary flex-fill btn-lg">Repeat 1000</a>
    </div>
    <ol class="list-group list-group-numbered">
    {% for i in range(1, request.all.repeat | default(10)) %}
        <li class="list-group-item">Hello World!</li>
    {% endfor %}
    </ol>
</div>
{% endblock %}
